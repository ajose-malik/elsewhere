<% layout('layout/template')%>
<div class="container d-flex justify-content-center align-items-center mt-5">
	<div class="row">
		<div class="col-6">
			<div class="card shadow" style='width: 300px'>
				<div class="card-body">
					<img
						src="https://images.unsplash.com/photo-1546435269-527d657231eb?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1008&q=80"
						alt=""
						class="card-img-top"
						style='height: 30vh'
					/>
					<h5 class="card-title mt-4 mb-2"><strong>Sign Up</strong></h5>
					<form
						action="/user/sign-up"
						method="POST"
						class="needs-validation"
						novalidate 
					>
						<div class="mb-3">
							<label class="form-label" for="username">Username</label>
							<input
								class="form-control"
								type="text"
								id="username"
								name="user[username]"
								required
							/>
							<div class="valid-feedback">Looks good!</div>
						</div>

						<div class="mb-3">
							<label class="form-label" for="password">Password</label>
							<input
								class="form-control"
								type="password"
								id="password"
								name="user[password]"
								required
							/>
							<div class="valid-feedback">Looks good!</div>
						</div>

						<button class="btn btn-success btn-block mb-3">Sign Up</button>
					</form>
				</div>
				<a href="/user/sign-in"
					><div class="card-body">
						<button class="btn btn-dark btn-block" style="width: 100%">
							Sign In
						</button>
					</div></a
			</div>
		</div>
	</div>
</div>
