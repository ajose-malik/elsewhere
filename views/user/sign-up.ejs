<% layout('layout/template')%>
<div class="container d-flex justify-content-center align-items-center mt-5">
	<div class="row">
		<div class="col-6">
			<div class="card shadow" style='width: 300px'>
				<div class="card-body">
					<img
						src="https://images.unsplash.com/photo-1543599538-a6c4f6cc5c05?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80"
						alt=""
						class="card-img-top"
						style='height: 200px'
					/>
					<h5 class="card-title">Sign Up</h5>
					<form
						action="/user/sign-up"
						method="POST"
						class="needs-validation"
						novalidate 
						enctype="multipart/form-data"

					>
						<div class="mb-3">
							<label class="form-label" for="username">Username</label>
							<input
								class="form-control"
								type="text"
								id="username"
								name="user[username]"
								required
							/>
							<div class="valid-feedback">Looks good!</div>
						</div>

						<div class="mb-3">
							<label class="form-label" for="password">Password</label>
							<input
								class="form-control"
								type="password"
								id="password"
								name="user[password]"
								required
							/>
							<div class="valid-feedback">Looks good!</div>
						</div>

						<div class="form-file custom-file mb-3">
							<label for="photo" class="form-file-label">Photo</label>
							<input type="file" class="form-control form-file-input" id="photo" name='photo' required/>
							<div class="valid-feedback">
								Looks good!
						</div>
						</div>
					
							<div class='mb-3'>
							<label for="about" class="form-label">Tell us about yourself</label>
							<textarea type="text" class="form-control" id="about" name="user[about]" required/></textarea>
							<div class="valid-feedback">
								Looks good!
						</div>
						</div>

						<button class="btn btn-success btn-block mb-3">Sign Up</button>
					</form>
				</div>
				<div class="card-body"'>
					<button class="btn btn-info btn-block"  style='width:100%'>
						<a href="/user/sign-in">Sign In</a>
					</button>
				</div>
			</div>
		</div>
	</div>
</div>
