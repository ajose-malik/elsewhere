<% layout('layout/template')%>

<div class="col-md-6 offset-md-3">
	<h1 class="text-center">New Adventure</h1>
	<form
	action="/elsewhere"
	method="POST"
	novalidate
	class="needs-validation"
	enctype="multipart/form-data"
	>
		<div>
			<label for="title" class="form-label">Title</label>
			<input
				type="text"
				class="form-control"
				id="title"
				name="elsewhere[title]"
				required
			/>
			<div class="valid-feedback">Looks good!</div>
		</div>
		
		<div>
		<label for="quin" class="form-label">Price</label>
		<div class="input-group">
			<span class="input-group-text">Q</span>
		<input
			type="number"
			class="form-control"
			id="quin"
			name="elsewhere[quin]"
			min="1"
			placeholder="1"
			step="1"
			required
		/>
		</div>
		<div class="valid-feedback">
			Looks good!
	</div>
	</div>

		<div>
		<label for="location" class="form-label">Location</label>
		<input
			class="form-control"
			list="datalistOptions"
			id="location"
			placeholder="Type to search..."
			name='elsewhere[location]'
			required
		/>	
		<div class="valid-feedback">
			Looks good!
	</div>
	</div>

	<div class="form-file custom-file">
		<label for="image" class="form-file-label">Image</label>
		<input type="file" class="form-control form-file-input" id="image" name='image' multiple required/>
		<div class="valid-feedback">
			Looks good!
	</div>
	</div>

		<div>
		<label for="description" class="form-label">Description</label>
		<textarea type="text" class="form-control" id="description" name="elsewhere[description]" required/></textarea>
		<div class="valid-feedback">
			Looks good!
	</div>
	</div>
	<div class='mt-3'><button class="btn btn-primary">Add Adventure</button></div>
	</form>
</div>
